@model IEnumerable<LabWebCars.Models.Producer>

@{
    ViewData["Title"] = "Дилери";
}

<div class="row">
    <div class="col-sm-9">
        <p>
            <input type="button" class="btn btn-success" value="Додати нового" onclick="location.href='@Url.Action("Create")'" />
        </p>
    </div>
    <div class="col-sm-3">
        <p>
            <input type="button" class="btn btn-primary" value="Переглянути карту дилерів" onclick="location.href='@Url.Action("ProducersMap")'" />
        </p>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.Info)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Icon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Corporation.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>*@
                    @*<td>
                            <img src="@("~/Icon/" + item.Icon)" asp-append-version="true" width="200" height="200" />
                        </td>*@
                    <td>
                        <img src="@(item.Icon)" asp-append-version="true" width="300" height="200" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Corporation.Name)
                    </td>
                    <td>
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a>
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>