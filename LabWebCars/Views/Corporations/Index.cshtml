@model IEnumerable<LabWebCars.Models.Corporation>

@{
    ViewData["Title"] = "Концерни";
}

<p>
    <input type="button" class="btn btn-success" value="Додати новий" onclick="location.href='@Url.Action("Create")'" />
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Label)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Info)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                            <img src="@("~/Image/" + item.Label)" asp-append-version="true" width="200" height="200" />
                        </td>*@
                    <td>
                        <img src="@(item.Label)" asp-append-version="true" width="300" height="200" />
                    </td>

                    @*<td>
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>*@
                <td>
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a>
                    @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    }
                </td>
                </tr>
            }
        </tbody>
    </table>
    </div>