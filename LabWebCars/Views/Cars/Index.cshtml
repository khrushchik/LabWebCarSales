@model IEnumerable<LabWebCars.Models.Car>

@{
    ViewData["Title"] = "Автомобілі";
}

    <p>
        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
        {
            <input type="button" class="btn btn-success" value="Додати новий" onclick="location.href='@Url.Action("Create")'" />
        }
    </p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Body)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transmission)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Info)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Producer.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Body)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transmission)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>*@
                    <td>
                        <img src="@(item.Photo)" alt ="@(item.Name)" asp-append-version="true" width="300" height="200" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Producer.Name)
                    </td>
                    <td>
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                         {
                            <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                         } 
                        <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> 
                        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                         {
                            <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                         }
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
